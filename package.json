{
	"name": "farm-management",
	"version": "0.0.2",
	"private": true,
	"author": {
		"name": "Alvin Kigen",
		"email": "alvinkigen997@gmail.com"
	},
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"fixer": "pnpm run format && pnpm run lint",
		"watch": "pnpm run fixer && pnpm run dev",
		"db:init": "pnpx prisma init --datasource-provider sqlite",
		"db:migrate": "pnpx prisma migrate dev --name init",
		"db:reset": "pnpx prisma migrate reset"
	},
	"devDependencies": {
		"@iconify/svelte": "^2.2.1",
		"@playwright/test": "^1.25.0",
		"@prisma/client": "^4.3.1",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@tailwindcss/forms": "^0.5.3",
		"@types/node": "^18.7.15",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"autoprefixer": "^10.4.8",
		"date-fns": "^2.29.2",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.16",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"prettier-plugin-tailwindcss": "^0.1.13",
		"prisma": "^4.3.1",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.1.8",
		"ts-node": "^10.9.1",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "^3.1.0-beta.1"
	},
	"type": "module",
	"prisma": {
		"seed": "node --loader ts-node/esm prisma/seed.ts"
	},
	"dependencies": {
		"pnpm": "^7.12.1"
	}
}
