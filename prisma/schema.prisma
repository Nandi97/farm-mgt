// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Menu {
  id   Int    @id @default(autoincrement())
  name String
  path String
  icon String
}

model Gender {
  id      Int      @id @default(autoincrement())
  name    String
  animals Animal[]
}

model AnimalType {
  id         Int              @id @default(autoincrement())
  name       String
  icon       String
  categories AnimalCategory[]
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @default(now())
}

model AnimalCategory {
  id        Int           @id @default(autoincrement())
  name      String        @unique
  type      AnimalType    @relation(fields: [typeId], references: [id])
  typeId    Int
  breeds    AnimalBreed[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @default(now())
}

model AnimalBreed {
  id          Int            @id @default(autoincrement())
  name        String
  description String
  category    AnimalCategory @relation(fields: [categoryId], references: [id])
  categoryId  Int
  animals     Animal[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @default(now())
}

model Animal {
  id          Int         @id @default(autoincrement())
  tag         String
  imageUrl    String?
  breed       AnimalBreed @relation(fields: [breedId], references: [id])
  breedId     Int
  gender      Gender      @relation(fields: [genderId], references: [id])
  genderId    Int
  bornAt      DateTime
  purchasedAt DateTime
  status      Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Role {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String
  users       User[]
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  imageUrl String?
  email    String
  phoneNo  String
  status   Boolean @default(true)
  role     Role    @relation(fields: [roleId], references: [id])
  roleId   Int
}

model UnitOfMeasurement {
  id       Int       @id @default(autoincrement())
  unit     String
  initial  String
  products Product[]
}

model Product {
  id       Int               @id @default(autoincrement())
  imageUrl String?
  uom      UnitOfMeasurement @relation(fields: [uomId], references: [id])
  uomId    Int
  name     String
}
